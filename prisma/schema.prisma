// Prisma Schema for Botanik App
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  avatar    String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts    Post[]
  accounts Account[]
  sessions Session[]

  @@map("users")
}

// Account Model for OAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session Model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Post Model
model Post {
  id          String      @id @default(cuid())
  title       String
  description String?
  content     String?     @db.Text
  published   Boolean     @default(false)
  featured    Boolean     @default(false)
  slug        String      @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  authorId    String
  categoryId  String?

  // Relations
  author   User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  images   Image[]
  tags     Tag[]

  @@map("posts")
}

// Category Model
model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String   @default("#10b981")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  posts Post[]

  @@map("categories")
}

// Tag Model
model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  color     String   @default("#6366f1")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts Post[]

  @@map("tags")
}

// Image Model
model Image {
  id        String   @id @default(cuid())
  filename  String
  originalName String
  mimeType  String
  size      Int
  url       String
  alt       String?
  postId    String?
  serviceId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  post    Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  service Service? @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@map("images")
}

// Service Model
model Service {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  image       String?
  category    String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  images Image[]

  @@map("services")
}

// ServiceArea Model (Faaliyet Alanları)
model ServiceArea {
  id        String   @id @default(cuid())
  name      String
  image     String
  order     Int      @default(0)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("service_areas")
}

// ContactInfo Model (İletişim Bilgileri)
model ContactInfo {
  id          String   @id @default(cuid())
  companyName String   @default("GreenPark Peyzaj")
  address     String
  phone       String
  email       String
  latitude    Float
  longitude   Float
  workingHours Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contact_info")
}

// Reference Model
model Reference {
  id          String   @id @default(cuid())
  companyName String
  logo        String?
  description String?  @db.Text
  website     String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("references")
}

// Gallery Model
model Gallery {
  id          String         @id @default(cuid())
  title       String
  description String?        @db.Text
  order       Int            @default(0)
  published   Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  // Relations
  images      GalleryImage[]

  @@map("galleries")
}

// Gallery Image Model
model GalleryImage {
  id        String   @id @default(cuid())
  url       String
  alt       String?
  order     Int      @default(0)
  galleryId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  gallery Gallery @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@map("gallery_images")
}

// Verification Token Model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Enums
enum Role {
  USER
  ADMIN
}
